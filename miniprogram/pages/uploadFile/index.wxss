
.box_text {
  background-color: white;
  text-align: center;
  margin: 50rpx;
  padding: 300rpx 0;
  border-radius: 18rpx;
  color: rgba(0, 0, 0, 0.5);
}

.code_box {
  text-align: center;
  background-color: white;
  margin: 50rpx;
  border-radius: 18rpx;
  padding: 50rpx 0 50rpx 0;
}

.code_img {
  width: 300rpx;
}

.button {
  width: 300rpx;
  text-align: center;
  margin: 20% auto 0 auto;
  height: 80rpx;
  color: #ff69b4;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: white;
}

.img_info {
  padding-top: 16px;
  width: 90%;
  margin: 0 auto;
  display: flex;
  padding: 16rpx 0;
  border-top: 0.5px solid #E5E5E5;
  margin-top: 50rpx;
}

.img_info_title {
  font-size: 14;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  width: 72px;
  margin-right: 32px;
}

.img_info_detail {
  text-align: left;
  font-size: 14;
  font-family: PingFang SC;
  font-weight: 400;
  color: #000000;
  width: 500rpx;
}
