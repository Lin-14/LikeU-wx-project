/**index.wxss**/

page {
  min-height: 100vh;
}
.bgImg {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.box {
  margin-top: 100rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 70rpx;
  width: 400rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
}
.girl, .boy {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.girl {
  border: 1px pink solid;
}
.boy {
  border: 1px skyblue solid;
}
.big-box {
  margin-top: 250rpx;
  padding-top: 150rpx;
  padding-bottom: 150rpx;
  width: 100%;
  position: relative;
}
.icon {
  width: 60rpx;
}
.circle {
  padding-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50% 0 0 50%;
  background-color: #fff;
}
.top {
  position: absolute;
  top: 10rpx;
  right: 0;
}
.middle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 100rpx;
}
.bottom {
  position: absolute;
  bottom: 10rpx;
  right: 0;
}
.left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  width: 160rpx;
  padding: 10rpx;
  border-radius: 0 50rpx 50rpx 0;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
}
.left image {
  width: 70rpx;
}