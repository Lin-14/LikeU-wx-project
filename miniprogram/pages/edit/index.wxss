.container {
  margin-top: 180rpx;
  font-size: large;
  color: #fff;
}
.form {
  width: 78%;
  line-height: 2.5;
  padding: 20rpx 30rpx;
  border-radius: 18rpx;
  background-color: rgba(255, 255, 255, .3);
}
.title {
  width: 100%;
  text-align: center;
}
.item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, .3);
}
.item input {
  text-align: right;
}
.btn {
  margin-top: 100rpx;
  width: 50%;
}
input {
  width: 300rpx;
}